footer
	background #212121
	
.footer
	color #999
	position relative
	margin 0 auto
	padding 75px 0 40px 0
	max-width 1170px
	width 97%
	
.footer-top
	overflow hidden
	border-bottom 1px solid #474747
	padding-bottom 15px
	
.footer-top__left
	float left
	width 100%
	max-width 450px
	.footer-text
		padding 40px 0
		font-size: 14px;
		font-weight: 400;
		line-height: 24px;
		
.footer-top__right
	width 100%
	max-width 600px
	float right
	
.footer-logo
	color #fff
	
.footer-text
	clear both
	
.footer-form__line
	overflow hidden
	.footer-form__input
		border none
		border-bottom 1px solid #474747
		background none
		float left
		width 45%
		margin-right 10%
		margin-bottom 30px
		padding-bottom 8px
		&:last-child
			margin-right 0
	textarea
		border none
		border-bottom 1px solid #474747
		background none
		padding 0
		margin-bottom 80px
		width 100%
		
	
.footer-form__submit
	width 40px
	position relative
	input
		border none
		background none
		color: #999;
		cursor pointer
		text-transform uppercase
		font-size: 14px;
		font-weight: 400
	&:after
		content: '';
		background: url(../img/general/arrow-form-right.png) no-repeat;
		display: block;
		height: 8px;
		position: absolute;
		width: 5px
		top: 28%
		right -13px
		
.footer-top__menu
	float left
	margin-right 100px	
	&:last-child
		margin-right 0
	span
		color: #ddd
		display block
		font-size: 15px
		font-weight: 600
		margin-bottom 37px
		text-transform: uppercase
	a
		color: #999;
		display block
		font-size: 14px
		font-weight: 400
		line-height: 24px
		
.footer-bottom
	padding-top 30px
	overflow hidden
	.footer-disclaimer
		float left
		span 
			display block
			color: #aaa
			font-size: 14px
			line-height 24px
	.footer-menu
		float right
		margin-top 10px
		a
			display inline-block
			margin-right 25px
			color: #aaa
			font-size: 13px
			text-transform: uppercase;
			&:last-child
				margin-right 0
		