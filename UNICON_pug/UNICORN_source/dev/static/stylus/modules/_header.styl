.header 
	position absolute
	top 0
	left 50%
	width 97%
	max-width 1170px
	transform translateX(-50%)
	padding-top 50px
	overflow hidden
	z-index 10
	
.header-logo
	float left
	font-family boldFont
	font-size 18px
	text-transform uppercase
	
.header-nav
	float right
	&.active
		.toggle-line__top
			top 10px
			transition 1s
			transform rotate(45deg)
			
		.toggle-line__middle
			opacity 0
			transition 1s	

		.toggle-line__bottom
			top 10px
			opacity 1	
			transform rotate(-45deg)
			
		.header-nav__list 
			// display inline-block
			top 0
			transition 1s

	
.header-nav__list 
	// display none
	display inline-block
	position relative
	top -1000px
	transition 1s
	margin-right 12px
	li
		display inline-block
		margin-right 12px
		&:last-child
			margin-right 0
	a
		font-family boldFont
		font-size 16px
		text-transform uppercase
		text-decoration none
		
