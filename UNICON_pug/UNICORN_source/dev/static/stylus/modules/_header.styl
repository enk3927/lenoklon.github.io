.header-nav__tooggle
	display inline-block
	cursor pointer
	width 15px
	height 15px
	position relative
	
	
.nav-toggle__line
	position absolute
	right 0
	width 100%
	height 2px
	display block 
	background mainColor
	cursor pointer
	
		

.toggle-line__top
	top 4px
	transition 1s
	
.toggle-line__middle
	top 9px
	opacity 1	
	transition 1s

.toggle-line__bottom
	top 14px
	opacity 1	
	transition 1s

			
	