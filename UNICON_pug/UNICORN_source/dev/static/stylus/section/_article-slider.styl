.article-slider
	background-color greybg
	.slick-disabled 
		display:none !important
		
.articles-slider__item
	position relative
	padding-left 24px
	.title
		font-size 18px
		margin 15px 0 0 0 
	.text
		font-size 14px
		text-align left
		margin 0
		width 100%
	&:before
		content ''
		display block
		position absolute
		width: 6px
		height: 73px
		background-color: #212121
		left 0
		
.js-articles_slider
	position relative
	
	
.articles-slider_prev,
.articles-slider_next
	position absolute
	top 50%
	cursor pointer
	
.articles-slider_prev
	left -5%
	display block
	width: 16px
	height: 16px
	background url('../img/svg/arrow-left.svg') no-repeat
	background-size 100%
	
.articles-slider_next
	right -5%
	display block
	width: 16px
	height: 16px
	background url('../img/svg/arrow-right.svg') no-repeat
	background-size 100%
		
