.catalog
	padding 160px 
	width 100%
		
.catalog-info
	text-align center
	padding-top 80px

.date
	color: #555
	font-size: 14px
	font-weight: 400
	
.title
	color: #222
	font-size: 24px
	font-weight: 600
	margin 20px auto 50px auto
	
.text
	text-align center
	color: #333
	font-size: 16px
	font-weight: 400
	line-height: 28px
	
.catalog-line
	overflow hidden
	margin-bottom 45px
	&:last-child
		margin-bottom 0
	
.catalog-item
	img
		width 100%
	float left
	width 48%
	&:first-child
		margin-right 4%