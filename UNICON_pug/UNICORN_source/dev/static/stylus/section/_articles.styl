.articles 
	text-align center
	.articles-title
		font-family boldFont
		font-size 27px
		font-weight 700
		margin-bottom 40px
	.articles-text
		font-family mainFont
		font-size 16px
		line-height 33px
		margin: 0 auto 20px auto;
		width 70%
		
.bx-wrapper
	margin-top 80px
	
.mb0
	margin-bottom 0
	
.articles-item
	background #222
	text-align left
	padding 40px 48px 48px 38px
	.article-item__title
		color lightColor
		font-size 14px
		font-family mainFont
		margin-bottom 30px
		text-transform uppercase
	.article-item__info
		color lightColor
		font-size 24px
		font-weight 400
		line-height 33px
		margin-bottom 55px
		height 74px
	.aricle-item__block
		float left
		color lightColor
		p
			line-height 19px
		img 
			float left
		.article__namedata
			float left
			margin 15px

a.bx-next
	margin-right 15px

.articles__slider
	position relative
	a.disabled 
		display:none
	
.articles-slider__prev,
.articles-slider__next
	position absolute
	top 50%
	
.articles-slider__prev
	left -5%
	.bx-prev
		display block
		width: 16px
		height: 16px
		background url('../img/svg/arrow-left.svg') no-repeat
		background-size 100%
	
.articles-slider__next
	right -5%
	.bx-next
		display block
		width: 16px
		height: 16px
		background url('../img/svg/arrow-right.svg') no-repeat
		background-size 100%
	
	
		
		
	


	
		
