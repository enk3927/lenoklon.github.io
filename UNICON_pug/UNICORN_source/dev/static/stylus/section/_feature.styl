.feature
	background greybg

.feature-content
	text-align justify
	&:after
		content ''
		display inline-block
		width 100%
		height 0
		
	.feature-content__item
		display inline-block
		text-align left
		width 25%
		.feature-item__title
			font-family boldFont
			font-size: 18px
			font-weight: 600
			margin 25px 0 35px 0
		.feature-item__text
			font-size: 16px
			font-family mainFont
			line-height: 26px

	